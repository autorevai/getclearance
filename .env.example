# Get Clearance - Environment Variables
# Copy this to .env.local and fill in your values

# ===================
# DATABASE
# ===================
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/getclearance

# ===================
# REDIS (for caching and job queue)
# ===================
REDIS_URL=redis://localhost:6379

# ===================
# CLAUDE AI (Anthropic)
# ===================
# Get your API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=

# ===================
# DOCUMENT STORAGE (Cloudflare R2)
# ===================
# Get credentials from Cloudflare dashboard > R2 > Manage API Tokens
R2_ACCESS_KEY_ID=
R2_SECRET_ACCESS_KEY=
R2_BUCKET=getclearance-docs
R2_ENDPOINT=

# ===================
# AUTHENTICATION (choose one)
# ===================
# Option A: Clerk (https://clerk.com)
CLERK_PUBLISHABLE_KEY=
CLERK_SECRET_KEY=

# Option B: Auth0 (https://auth0.com)
# AUTH0_DOMAIN=
# AUTH0_CLIENT_ID=
# AUTH0_CLIENT_SECRET=

# ===================
# SCREENING DATA SOURCES
# ===================
# OpenSanctions API (https://www.opensanctions.org/api/)
OPENSANCTIONS_API_KEY=

# ===================
# APP CONFIG
# ===================
NODE_ENV=development
NEXT_PUBLIC_API_URL=http://localhost:8000
FRONTEND_URL=http://localhost:3000
