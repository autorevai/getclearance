# GetClearance Environment Variables
# Copy this file to .env.local and fill in your values
# NEVER commit actual secrets to version control

# ===================
# CORE CONFIGURATION
# ===================
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=DEBUG

# Generate with: openssl rand -hex 32
SECRET_KEY=dev-secret-key-change-in-production

# ===================
# DOCKER COMPOSE SECRETS
# ===================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=getclearance
POSTGRES_PORT=5432

REDIS_PASSWORD=
REDIS_PORT=6379

MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin123
MINIO_PORT=9000
MINIO_CONSOLE_PORT=9001

API_PORT=8000

# ===================
# DATABASE
# ===================
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/getclearance
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10

# ===================
# REDIS
# ===================
REDIS_URL=redis://localhost:6379
REDIS_MAX_CONNECTIONS=10

# ===================
# AUTHENTICATION (Auth0)
# ===================
# Get from: https://manage.auth0.com/dashboard
AUTH0_DOMAIN=your-tenant.auth0.com
AUTH0_CLIENT_ID=<your-auth0-client-id>
AUTH0_CLIENT_SECRET=<your-auth0-client-secret>
AUTH0_AUDIENCE=https://api.getclearance.com

# ===================
# DOCUMENT STORAGE (Cloudflare R2)
# ===================
# Get from: Cloudflare Dashboard > R2 > Manage API Tokens
R2_ENDPOINT=https://<account-id>.r2.cloudflarestorage.com
R2_ACCESS_KEY_ID=<your-r2-access-key>
R2_SECRET_ACCESS_KEY=<your-r2-secret-key>
R2_BUCKET=getclearance-docs

# ===================
# AI (Anthropic Claude)
# ===================
# Get from: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-api03-<your-key>

# ===================
# AI (OpenAI) - Optional
# ===================
# Get from: https://platform.openai.com/
OPENAI_API_KEY=sk-<your-key>

# ===================
# AML SCREENING (OpenSanctions)
# ===================
# Get from: https://www.opensanctions.org/api/
OPENSANCTIONS_API_KEY=<your-opensanctions-key>

# ===================
# OCR (AWS Textract) - Optional
# ===================
# Get from: AWS IAM Console
AWS_ACCESS_KEY_ID=<your-aws-key>
AWS_SECRET_ACCESS_KEY=<your-aws-secret>
AWS_REGION=us-east-1

# ===================
# MONITORING (Sentry) - Optional for dev
# ===================
# Get from: https://sentry.io/
SENTRY_DSN=

# ===================
# SECURITY
# ===================
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,http://localhost:9000

# Rate limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_BURST=20

# ===================
# WEBHOOKS - Optional
# ===================
WEBHOOK_MAX_RETRIES=3
WEBHOOK_RETRY_DELAY_SECONDS=30,300,3600

# ===================
# APPLICATION
# ===================
APP_NAME=GetClearance
APP_VERSION=1.0.0
API_V1_PREFIX=/api/v1
NODE_ENV=development
NEXT_PUBLIC_API_URL=http://localhost:8000
FRONTEND_URL=http://localhost:9000
